---

import HomeComponent from './Home.astro'

---

<main id="home">
    <img src="/assets/images/bg.png" class="background" alt="background image" width="1920" height="1080" />
	<div class="overlay"></div>
    <HomeComponent />
</main>

<style>
    main {
		display: flex;
		flex-direction: column;
		height: 100svh;
		width: 100%;
		position: relative;
	}

	.overlay {
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		background-color: hsla(0, 0%, 0%, 0.7);
		z-index: -1;
	}

	.background {
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		opacity: 0.5;
		object-fit: cover;
		z-index: -1;
	}
</style>