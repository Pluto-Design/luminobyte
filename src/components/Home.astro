---

const { default: innerHTML } = await import(`/assets/svg/expand_right_double.svg?raw`);

---

<section>
    <div class="content">
        <p>Shining a <span>light</span> on unique gaming experiences</p>
    </div>
    
    <a class="arrow-down" href="#games">
        <Fragment set:html={innerHTML} />
    </a>
</section>

<style>
    .content {
        height: 90%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        flex: 1;
        padding-top: 10em;
        font-size: 1.25rem
    }

    .arrow-down {
        margin: 0 0 4em 0;
        cursor: pointer;
        animation: bounce 1s infinite alternate;
    }

    @keyframes bounce {
        from {
            transform: translateY(0px);
        }

        to {
            transform: translateY(-10px);
        }
    }

    section {
		width: 100%;
		height: 100svh;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}

    p {
        font-size: 2em;
        font-weight: 400;
        font-family: 'Montserrat', sans-serif;
        text-align: center;
    }
    p span {
        color: var(--bright-green);
        font-family: 'Montserrat', sans-serif;
    }

    @media (max-width: 768px) {
        .content p {
            font-size: 1.5em;
        }
    }
</style>