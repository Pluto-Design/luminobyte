---

interface Props {
    name: string;
    role: string;
    image: string;
    description: string;
}

const { name, role, image, description }: Props = Astro.props;

---

<div class="team-card">
    <div class="team-card-hover_content">
        <span>{name}</span>
        <p>{description}</p>
    </div>
    <img src={image} alt={`${name} - ${role} team card`} />
    <div class="team-card__content">
        <h3>{name}</h3>
        <p>{role}</p>
    </div>
</div>

<style>
    .team-card {
        width: 20%;
        border-radius: 12px;
        margin: 1.5em 3rem;
        position: relative;
        cursor: pointer;
    }

    .team-card img {
        width: 100%;
        height: 30%;
        pointer-events: none;
    }

    .team-card__content {
        padding: 0 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-right: 4px solid var(--bright-green);
        border-left: 4px solid var(--bright-green);
        border-bottom: 4px solid var(--bright-green);
    }

    .team-card__content h3 {
        font-size: 1rem;
        font-weight: 700;
        padding: 0.5em 0.25em 0 0;
    }

    .team-card__content p {
        font-size: 0.75rem;
        font-weight: 400;
        color: var(--bright-green);
        text-align: center;
        padding: 0.5rem 0;
    }

    .team-card-hover_content {
        position: absolute;
        top: 0;
        left: 0;
        width: calc(100% - 2rem);
        height: calc(100% - 2rem);
        background-color: black;
        z-index: 9999;
        opacity: 0;
        padding: 1rem;
    }

    .team-card-hover_content p {
        padding: 0.5rem 0;
        font-size: 0.6rem;
    }

    .team-card-hover_content:hover {
        opacity: 0.9;
    }

    @media (max-width: 1280px) {
        .team-card {
            width: 30%;
            margin: 1.5em 2em;
        }

        .team-card h3 {
            font-size: 0.65rem;
        }

        .team-card p {
            font-size: 0.5rem;
        }

        .team-card-hover_content p {
            font-size: 0.5rem;
        }
    }

    @media (max-width: 768px) {
        .team-card {
            width: 40%;
            margin: 1.5em 0;
        }

        .team-card img {
            height: 80%;
        }
    }

    @media (max-width: 480px) {
        .team-card {
            width: 100%;
            margin: 1.5em 0;
        }

        .team-card h3 {
            font-size: 0.75rem;
        }

        .team-card p {
            font-size: 0.5rem;
        }
    }
</style>